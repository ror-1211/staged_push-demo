<h1>Metrics</h1>

<%= link_to "Increase metric", new_metric_increase_path %>

<table>
  <thead>
    <tr>
      <th>name</th>
      <th>value</th>
    </tr>
  </thead>
  <tbody>
    <% @metrics.each do |metric| %>
      <tr>
        <td>
          <%= metric.name %>
        </td>
        <td>
          <%= metric.value %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
